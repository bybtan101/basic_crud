<h1>Create New Quetions </h1>

<% if @question.errors.any? %>
 <ul>
  <% @question.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
 </ul>
 <% end %>

<% @question.errors.full_messages %>
<%= form_for @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %> 
  </div>

  <%= f.submit "Submit Question" %>
  <% end %>